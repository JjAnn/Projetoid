     <td style="width: 45px">Distancia em KM:</td>
     <td style="width: 5px"> Ações: </td>
                        </tr>
                        </thead>

                        <tbody>
                           <% @locals.each do |local| %>
                           
                        <tr>
                          
                            <td><%= local.id %></td>
                            <td><%= local.cliente.name %></td>
 <td><%= local.logra %></td>
 <td><%= local.cep %></td>
 <td><%= local.uf %></td>
 <td><%= local.city %></td>
 <td><%= local.km %></td>
